extends layout 

block content 
  h1 #{title}

  form(method="POST" action="")
    .form-field 
      label(for="name") Department name: 
      input(type="text", placeholder="jewelery, toys etc." required="true" name="name" value=(undefined===department ? "" : department.name)) 
    button(type="submit") Submit 

  if errors 
    ul(style="color: red;") 
      for error in errors 
        li!= error.msg